@model UB_BikeRental.ViewModel.ReservationDetailsViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "MakeReservation";
}

<head>
    <link href="~/sbadmin/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<h1 class="m-4">Rezerwacja</h1>

<h4 class ="m-4">Reservation</h4>
<hr />
<div class="row m-2">
    <div class="col-md-4">
        <form asp-action="MakeReservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id</label>
                <input contenteditable="false" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalPointID" class="control-label">RentalPointID</label>
                <input contenteditable="false" asp-for="RentalPointID" class="form-control" />
                <span asp-validation-for="RentalPointID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">Imie wypożyczającego</label>
                <input contenteditable="false" asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickUpDate" class="control-label">Data odbioru</label>
                <input asp-for="PickUpDate" class="form-control" />
                <span asp-validation-for="PickUpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label">Data zwrotu</label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            @Html.DropDownListFor(model => model.VehicleID, @Model.Vehicles, "---Wybierz pojazd---", new { @class = "form-control" })
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label">Koszt całkowity</label>
                <input contenteditable="false" asp-for="TotalCost" class="form-control" />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input itemid="make-reservation" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class ="m-4">
    <a asp-action="Index">Back to List</a>
</div>

