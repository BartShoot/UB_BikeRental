@model IEnumerable<UB_BikeRental.ViewModel.RentalPointItemViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Rezerwuj";
}

<head>
    <link href="~/sbadmin/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<a href="/Home/Index" class="m-4">Powrót</a>

<h1 class ="m-4">Wybierz punkt rezerwacji</h1>

<table class="table col-xl-3 col-md-6 m-4">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="MakeReservation" asp-route-id="@item.Id">Rezerwuj</a>
            </td>
        </tr>
}
    </tbody>
</table>
